{
  "name": "ngx-helper",
  "version": "0.30.0",
  "scripts": {
    "ng": "ng",
    "start": "npm run cpassets && ng serve",
    "cpassets": "cp -R projects/smallpearl/ngx-helper/src/assets/* ./src/assets",
    "lib:bump-build": "cd projects/smallpearl/ngx-helper && standard-version --infile ../../../CHANGELOG.md && cp README.md ../../.. && cd ../../.. && ng build @smallpearl/ngx-helper",
    "lib:release": "npm run lib:test -- --browsers ChromeHeadless --watch=false --progress=false && cd projects/smallpearl/ngx-helper && standard-version --infile ../../../CHANGELOG.md && cp README.md ../../.. && cd ../../.. && ng build @smallpearl/ngx-helper && cd dist/smallpearl/ngx-helper && npm publish --access=public",
    "lib:build": "ng build @smallpearl/ngx-helper",
    "lib:watch": "ng build @smallpearl/ngx-helper --configuration development --watch",
    "lib:test": "ng test @smallpearl/ngx-helper",
    "lib:test-rel": "ng test @smallpearl/ngx-helper --browsers ChromeHeadless --no-watch --no-progress",
    "publish": "cd dist/smallpearl/ngx-helper && npm publish --access=public"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "19.1.6",
    "@angular/cdk": "19.1.4",
    "@angular/common": "19.1.6",
    "@angular/compiler": "19.1.6",
    "@angular/core": "19.1.6",
    "@angular/forms": "19.1.6",
    "@angular/material": "~19.1.4",
    "@angular/platform-browser": "19.1.6",
    "@angular/platform-browser-dynamic": "19.1.6",
    "@angular/router": "19.1.6",
    "@jsverse/transloco": "^7.5.1",
    "@ngneat/elf": "^2.5.1",
    "@ngneat/elf-entities": "^5.0.2",
    "@ngneat/elf-pagination": "^1.1.0",
    "@ngneat/error-tailor": "^5.0.1",
    "angular-split": "^19.0.0",
    "google-libphonenumber": "^3.2.34",
    "lodash": "^4.17.21",
    "ngx-infinite-scroll": "^19.0.0",
    "ngx-mat-select-search": "^8.0.0",
    "pluralize": "^8.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "19.1.7",
    "@angular-devkit/core": "19.1.7",
